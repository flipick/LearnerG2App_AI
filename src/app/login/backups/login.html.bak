<div *ngIf="signInForm" id="loginView" class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-[#1e1e1e] p-4">
    <div class="w-full max-w-md bg-white dark:bg-[#2d2d2d] border border-[#aaabab] dark:border-[#545454] rounded-lg shadow-sm">
      <div class="p-6">
        <h2 class="text-xl font-semibold text-black dark:text-white mb-2">Welcome to Skills & Learning</h2>
        <p class="text-sm text-[#7b8fa2] dark:text-[#b3c0cd] mb-6">Enter your name to access your learning dashboard</p>
          <!-- Error Message -->
        <p *ngIf="errorMessage" class="text-sm text-red-600 mb-4">
          Invalid Email or Password
        </p>
        <form [formGroup]="signInForm" id="loginForm" (submit)="submitForm($event)">
          <!-- Name Input -->
          <div class="mb-4">
            <label for="username" class="block text-sm font-medium text-black dark:text-white mb-1">Your Email</label>
            <input
              type="text"
              id="username"
              name="username"
              formControlName="username"
              class="w-full px-4 py-2 border border-[#aaabab] dark:border-[#545454] rounded-md bg-white dark:bg-[#1e1e1e] text-black dark:text-white focus:outline-none focus:ring-2 focus:ring-[#444ce7]"
              placeholder="Enter your email"
              required
            />
          </div>
          <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-black dark:text-white mb-1">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              formControlName="password"
              class="w-full px-4 py-2 border border-[#aaabab] dark:border-[#545454] rounded-md bg-white dark:bg-[#1e1e1e] text-black dark:text-white focus:outline-none focus:ring-2 focus:ring-[#444ce7]"
              placeholder="Enter your password"
              required
            />
          </div>
  
          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-[#444ce7] text-white py-2 rounded-md hover:bg-[#3730a3] active:bg-[#312e81] transition text-sm font-medium">
            Enter Learning Portal
          </button>
        </form>
      </div>
    </div>
  </div>
  